<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置背景色-->
    <solid android:color="@color/white_1" />
    <!--设置圆角-->
    <corners android:radius="3dp" />
    <padding
    android:bottom="5dp"
    android:left="5dp"
    android:right="5dp"
    android:top="5dp"
    />
    <!--设置边框线的宽度和颜色-->
    <stroke android:width="0.1dp" android:color="@color/main_color_3" />
</shape>