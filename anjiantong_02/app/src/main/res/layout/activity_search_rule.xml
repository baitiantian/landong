<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jinan.ladongjiguan.anjiantong.activity.SearchRuleActivity">

    <include
        android:id="@+id/search_rule_back"
        layout="@layout/i_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jinan.ladongjiguan.anjiantong.view.SearchView
        android:id="@+id/search_rule_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_rule_back"/>

    <ListView
        android:id="@+id/search_rule_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_rule_search"/>
    <RelativeLayout
        android:id="@+id/search_rule_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/white_0"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/search_rule_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/search_rule_pb"
            android:gravity="center"
            android:text="点击加载更多" />
    </RelativeLayout>
</RelativeLayout>
