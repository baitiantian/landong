<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/i_title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="30dp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color_3"
            android:textSize="14sp"
            android:text="@string/review_main_13"
            android:layout_weight="0.3"
            android:gravity="end|center"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/main_color_3"
            android:textSize="14sp"
            android:id="@+id/e_car_num_5"
            android:gravity="center"
            android:entries="@array/s_car_num_15"
            android:layout_gravity="center"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/main_color_3"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="@string/review_main_02"
            android:id="@+id/tx_table"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_02"
        android:background="@android:color/white"
        android:divider="#00000000"/>
</LinearLayout>