<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:clickable="true"
        android:id="@+id/login_back">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:src="@drawable/examine_page_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        >
        <ImageView
            android:layout_width="260dp"
            android:layout_height="130dp"
            android:src="@drawable/home_page_logo_1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="30dp"
        android:background="#50000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom">
            <EditText
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:hint="请输入服务器IP地址"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/setting_ip"
                android:background="@drawable/login_edit_text_bg_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|bottom">
            <Button
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@drawable/login_bt"
                android:id="@+id/login_setting"
                android:text="设    置"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|bottom">
            <Button
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@drawable/login_bt"
                android:id="@+id/login_date_up"
                android:text="更新数据"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:paddingBottom="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 济南蓝动激光技术有限公司"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>