<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/white_2">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_0"
                android:text="@string/app_maker"
                android:textSize="@dimen/txt_14"
                android:id="@+id/tx_list_home_message"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="@dimen/dp_5"
                android:src="@drawable/img_list_home_address"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_1"
                android:text="@string/home_05"
                android:layout_margin="@dimen/dp_5"
                android:textSize="@dimen/txt_12"
                android:id="@+id/tx_list_home_address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_1"
                android:text="@string/home_05"
                android:layout_margin="@dimen/dp_5"
                android:textSize="@dimen/txt_12"
                android:id="@+id/tx_list_home_people"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_1"
                android:text="@string/home_05"
                android:layout_margin="@dimen/dp_5"
                android:textSize="@dimen/txt_12"
                android:id="@+id/tx_list_home_time"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_list_home_message_state"
            android:src="@drawable/img_list_home_message_state_01"
            />
    </LinearLayout>
</LinearLayout>