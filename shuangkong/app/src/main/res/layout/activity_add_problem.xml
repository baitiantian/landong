                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="2"
                        android:text="@string/add_problem_03"
                        android:textColor="@color/gray_0"
                        android:textSize="@dimen/txt_16" />

