<?xml version="1.0" encoding="utf-8"?>
<com.jinan.ladongjiguan.djj8plus.publicClass.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:layout_gravity="center"
    android:background="@drawable/bt_home_setting">

    <RelativeLayout
        android:id="@+id/item_recycler_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/tx_item_head"
                android:textColor="@color/white_1"
                android:textSize="@dimen/txt_24"
                android:background="@drawable/red_button_background"
                android:text="路"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/item_recycler_tv"
                android:scaleType="fitXY"
                android:text="@string/home_main_12"
                android:textSize="@dimen/txt_16"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black_0"
                android:layout_marginStart="@dimen/dp_10"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_5">

        <Button
            android:id="@+id/item_recycler_edit"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_button_orange"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/item_recycler_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_button_red"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</com.jinan.ladongjiguan.djj8plus.publicClass.SwipeItemLayout>